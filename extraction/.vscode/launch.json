    "version": "0.2.0",
    "configurations": [
        {
            "name": "Local extraction",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "extract_articles.py",
            "console": "integratedTerminal",
            "args": ["--mode", "local"]
        },
        {
            "name": "Ollama extraction",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "extract_articles.py",
            "console": "integratedTerminal",
            "args": ["--mode", "ollama"]
        }
    ]
}