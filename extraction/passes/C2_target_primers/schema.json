              "modifications": {
                "type": "array",
                "items": {
                  "type": "object",
                  "additionalProperties": false,
                  "required": ["modification_position", "modification_type", "description"],
                  "properties": {
                    "modification_position": { },
                    "modification_type": { },
                    "description": { }
